<div class="container signup">
  <div class="big-container-signup">
    <div class="signup-header">
      <h2 class="signup-text">Create an Account</h2>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <div class="signup-name">
            <%= f.input :first_name, required: true, autofocus: true, label:false, placeholder: 'First name', :placeholder_html => { :class => 'placeholder' }%>
            <%= f.input :last_name, required: true, autofocus: true, label: false, placeholder: 'Last name'%>
        </div>
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    label: false,
                    placeholder: 'Email',
                    input_html: { autocomplete: "email", class: "foo" }%>
        <%= f.input :password,
                    required: true,
                    label: false,
                    placeholder: 'Password',
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    label: false, placeholder: 'Confirm your Password',
                    input_html: { autocomplete: "new-password" } %>
      </div>

      <div class="form-actions signup">
        <%= f.button :submit, "Sign up" %>
      </div>
    <% end %>
    <div class="login-action">
      <p class="login-already">Already have an account?<span class="login-link"><%= render "devise/shared/links" %></span></p>
    </div>
  </div>
</div>