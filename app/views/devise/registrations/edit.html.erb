<div class="container settings">
  <div class="big-container-settings">

    <!-- Font awesome back button -->
      <div class="back-button-settings">
        <%= link_to :back do %>
        <svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
          viewBox="0 0 492 492" width="20px" fill="#151515" style="enable-background:new 0 0 492 492;" xml:space="preserve">
          <g>
            <g>
              <path d="M198.608,246.104L382.664,62.04c5.068-5.056,7.856-11.816,7.856-19.024c0-7.212-2.788-13.968-7.856-19.032l-16.128-16.12
                C361.476,2.792,354.712,0,347.504,0s-13.964,2.792-19.028,7.864L109.328,227.008c-5.084,5.08-7.868,11.868-7.848,19.084
                c-0.02,7.248,2.76,14.028,7.848,19.112l218.944,218.932c5.064,5.072,11.82,7.864,19.032,7.864c7.208,0,13.964-2.792,19.032-7.864
                l16.124-16.12c10.492-10.492,10.492-27.572,0-38.06L198.608,246.104z"/>
            </g>
          </g>
        </svg>
        <% end %>
      </div>

    <div class="settings-header">
      <h2 class="settings-text">Settings</h2>
    </div>
    <!-- profile picture -->
    <div class="user-name-picture">
      <% if current_user.photo.attached? %>
        <%= cl_image_tag current_user.photo.key, height: 400, width: 400, crop: :fit, class: "avatar-large", alt: "avatar-large" %>
      <% else %>
        <%= image_tag "https://res.cloudinary.com/di6k1pdz4/image/upload/v1606851697/Beerware/Users/placeholder_gzfccg.png", class: "avatar-large", alt: "avatar-large" %>
      <% end %>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
      <p>Upload your profile picture</p>
        <%= f.input :photo, as: :file, label: false %>
        <div class="settings-name">
          <%= f.input :first_name, required: true, autofocus: true, placeholder: "First name", label: false %>
          <%= f.input :last_name, required: true, autofocus: true, placeholder: "Last name", label: false %>
        </div>

        <%= f.input :email, required: true, autofocus: true, placeholder: "Email", label: false %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>
        <p>Change password?</p>
        <%= f.input :current_password,
                    required: true,
                    input_html: { autocomplete: "current-password" },
                    placeholder: "Current password",
                    label: false %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "new-password" },
                    placeholder: "New password",
                    label: false %>
        <%= f.input :password_confirmation,
                    required: false,
                    input_html: { autocomplete: "new-password" },
                    placeholder: "Confirm password",
                    label: false %>

      </div>

      <div class="form-actions settings">
        <%= f.button :submit, "Update", class: "btn btn-ghost" %>
      </div>
    <% end %>
    <div class="cancel-action">
      <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
    </div>
  </div>
</div>