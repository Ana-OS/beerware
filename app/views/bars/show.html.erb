<div class="bar-container">

  <!-- font awesome back button -->
  <div class="back-button">
    <%= link_to :back do %>
      <i class= "fas fa-arrow-circle-left fa-3x"></i>
    <% end %>
  </div>

  <img src="https://media-cdn.tripadvisor.com/media/photo-s/16/25/81/c2/our-new-logo.jpg" class="img-fluid" />


  <div class="container">
    <div class="container-fluid">
      <h1 class="card-bar-name"><%= @bar.name %></h1>
      <p class="card-bar-location"><%=link_to @bar.location, map_bar_path %></p>
      <p class="card-bar-description"><%= @bar.description %></p>
      <div class="beer-menu">
        <button class="button beer-menu"><%= link_to "Beer menu", beer_menu_bar_path(@bar) %></button>
      </div>

    </div>
  </div>
</div>
