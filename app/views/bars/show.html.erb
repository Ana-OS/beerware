<div class="bar-container">
  <!-- Back button -->
  <div class="back-button">
    <%= link_to :back do %>
      <svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
        viewBox="0 0 492 492" width="20px" fill="#fcfcfccb" style="enable-background:new 0 0 492 492;" xml:space="preserve">
        <path d="M198.608,246.104L382.664,62.04c5.068-5.056,7.856-11.816,7.856-19.024c0-7.212-2.788-13.968-7.856-19.032l-16.128-16.12
          C361.476,2.792,354.712,0,347.504,0s-13.964,2.792-19.028,7.864L109.328,227.008c-5.084,5.08-7.868,11.868-7.848,19.084
          c-0.02,7.248,2.76,14.028,7.848,19.112l218.944,218.932c5.064,5.072,11.82,7.864,19.032,7.864c7.208,0,13.964-2.792,19.032-7.864
          l16.124-16.12c10.492-10.492,10.492-27.572,0-38.06L198.608,246.104z"/>
      </svg>
    <% end %>
  </div>
  <!-- Image -->
  <% if @bar.photo_url? %>
    <%= image_tag @bar.photo_url, class: "img-fluid" %>
  <% else %>
    <%= image_tag "https://res.cloudinary.com/di6k1pdz4/image/upload/v1607614839/Beerware/Bars/generic_bar_kiyhwh.jpg", class: "img-fluid" %>
  <% end %>
  <!-- Bar details -->
  <div class="container">
    <div class="container-fluid">
      <h1 class="card-bar-name"><%= @bar.name %></h1>
      <p class="card-bar-location"><%=link_to @bar.location, map_bar_path %></p>
      <p class="card-bar-description"><%= @bar.description %></p>
      <!-- Beer menu -->
      <div class="beer-menu">
        <button class="button beer-menu"><%= link_to "Beer menu", beer_menu_bar_path(@bar) %></button>
      </div>
    </div>
  </div>
</div>
