<div class="beers-container">
  <div class="container search-header">
    <div class="row">
      <!-- Back button -->
      <div class="back-button-index">
        <%= link_to :back do %>
        <svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
          viewBox="0 0 492 492" width="20px" fill="#151515" style="enable-background:new 0 0 492 492;" xml:space="preserve">
          <g>
            <g>
              <path d="M198.608,246.104L382.664,62.04c5.068-5.056,7.856-11.816,7.856-19.024c0-7.212-2.788-13.968-7.856-19.032l-16.128-16.12
                C361.476,2.792,354.712,0,347.504,0s-13.964,2.792-19.028,7.864L109.328,227.008c-5.084,5.08-7.868,11.868-7.848,19.084
                c-0.02,7.248,2.76,14.028,7.848,19.112l218.944,218.932c5.064,5.072,11.82,7.864,19.032,7.864c7.208,0,13.964-2.792,19.032-7.864
                l16.124-16.12c10.492-10.492,10.492-27.572,0-38.06L198.608,246.104z"/>
            </g>
          </g>
        </svg>
       <% end %>
      </div>
      <!-- Search -->
      <div class="col col-10">
        <%= form_tag search_page_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query], # params[:query]
            class: "search-bar",
            placeholder: "Beer name, bar, type of beer..."
          %>
        <% end %>
      </div>
    </div>
  </div>
  <!-- Cards -->
  <div class="container">
    <div class="container-fluid">
      <h2 class="bars-title"> Beer menu for <%= @bar.name %></h2>
      <% @bar_beer.each do |beer| %>
        <div class="card beers">
          <%= link_to beer_path(beer) do %>
            <div class="row">
              <div class="col-sm-3 col-5">
                <% if beer.photo.attached? %>
                  <%= cl_image_tag beer.photo.key, height: 100, width: 80, crop: :fit, class: "img-fluid" %>
                <% else %>
                  <%= image_tag "https://w7.pngwing.com/pngs/266/759/png-transparent-gray-can-illustration-beer-aluminum-can-beer-packaging-design-glass-beer-bottle-preview.png", class: "img-fluid" %>
                <% end %>
              </div>
              <div class="col-sm-9 col-7 pl-0 beers">
                <div class="card-beer-infos">
                  <div class="name-rating">
                    <h2 class="card-beer-name"><%= h truncate(beer.name, :length => 25) %></h2>
                    <div class="card-beer-rating"><%= beer.avg_rating %></div>
                  </div>
                  <p class="card-beer-category"><%= h truncate(beer.category, :length => 25) %></p>
                  <p class="card-beer-description"><%= h truncate(beer.description, :length => 90) %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
