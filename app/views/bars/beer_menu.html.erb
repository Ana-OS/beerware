<div class="beers-container">
  <div class="container search-header">
    <!-- font awesome back button -->
    <!-- add rows and col -->
    <div class="row">
      <div class="col col-2">
        <%= link_to :back do %>
          <i class= "fas fa-arrow-circle-left fa-2x"></i>
        <% end %>
      </div>

    <!-- Search -->
      <div class="col col-10">

        <%= form_tag search_page_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query], # params[:query]
            class: "search-bar",
            placeholder: "Beer name, bar, type of beer..."
          %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="container-fluid">
      <h2 class="bars-title"> Beer menu for <%= @bar.name %></h2>

      <% @bar_beer.each do |beer| %>
        <div class="card beers">
          <%= link_to beer_path(beer) do %>

            <div class="row">
              <div class="col-sm-3 col-5">
                <img src="https://w7.pngwing.com/pngs/266/759/png-transparent-gray-can-illustration-beer-aluminum-can-beer-packaging-design-glass-beer-bottle-preview.png" class="img-fluid" />
              </div>

              <div class="col-sm-9 col-7 pl-0 beers">
                <div class="card-beer-infos">
                  <h2 class="card-beer-name"><%= h truncate(beer.name, :length => 20) %></h2>
                  <p class="card-beer-category"><%= h truncate(beer.category, :length => 10) %></p>
                  <p class="card-beer-description"><%= h truncate(beer.description, :length => 70) %></p>
                </div>
              </div>
            </div>
            
          <% end %>
        </div>
      <% end %>

    </div>
  </div>
</div>
