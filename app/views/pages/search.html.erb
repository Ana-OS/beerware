            </g>
          </g>
          </svg>

          <h4 class="no-search-title"> <%= link_to "Or search the map", map_page_path %></h4>
        </div>


      <% elsif @empty_list%>
        <br>
        <h4> No results but you can checkout some of the beers and bars below. </h4>

        <h4> Recommended Beers </h4>

        <% @beers.each do |beer| %>
          <div class="card beers">
            <div class="row">

              <div class="col-sm-3 col-5">
                <%= link_to beer_path(beer) do %>
                  <img src="https://w7.pngwing.com/pngs/266/759/png-transparent-gray-can-illustration-beer-aluminum-can-beer-packaging-design-glass-beer-bottle-preview.png" class="img-fluid" />
                <% end %>
              </div>

              <div class="col-sm-9 col-7 pl-0 beers">
                <div class="card-beer-infos" >
                  <%= link_to beer_path(beer) do %>
                    <h2 class="card-beer-name"><%= h truncate(beer.name, :length => 25) %></h2>
                    <p class="card-beer-category"><%=h truncate(beer.category, :length => 25) %></p>
                    <p class="card-beer-description"><%=h truncate(beer.description, :length => 90) %></p>
                  <% end %>
                </div>
              </div>

            </div>
          </div>
        <% end %>

        <h4>Recommended Bars</h4>

        <% @bars.each do |bar| %>
          <div class="card bars" >
            <div class="row" >

              <div class="col-sm-3 col-5">
                <%= link_to bar_path(bar) do %>
                  <img src="https://media-cdn.tripadvisor.com/media/photo-s/16/25/81/c2/our-new-logo.jpg" class="img-fluid" />
                <% end %>
              </div>

              <div class="ol-sm-9 col-7 pl-0 bars">
                <div class="card-bars-infos">
                  <%= link_to bar_path(bar) do %>
                    <h2 class="card-bars-name"><%=h truncate(bar.name, :length => 25) %></h2>
                    <p class="card-bars-location"><%=h truncate(bar.location, :length => 25) %></p>
                    <p class="card-bars-description"><%=h truncate(bar.description, :length => 90) %></p>
                 <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>

      <% else %>

        <h2 class="bars-title">Results for beers</h2>
        <% if @beers.length < 1  %>
          <p>Sorry, no beers found üßê</p>
        <% else %>
          <% @beers.each do |beer| %>
            <div class="card beers">
              <div class="row">

                <div class="col-sm-3 col-5">
                  <%= link_to beer_path(beer) do %>
                    <img src="https://w7.pngwing.com/pngs/266/759/png-transparent-gray-can-illustration-beer-aluminum-can-beer-packaging-design-glass-beer-bottle-preview.png" class="img-fluid" />
                  <% end %>
                </div>

                <div class="col-sm-9 col-7 pl-0 beers">
                  <%= link_to beer_path(beer) do %>
                    <div class="card-beer-infos">
                      <div class="name-rating">
                        <h2 class="card-beer-name"><%= h truncate(beer.name, :length => 25) %></h2>
                        <div class="card-beer-rating"><%= beer.avg_rating %></div>
                      </div>
                      <p class="card-beer-category"><%=h truncate(beer.category, :length => 25) %></p>
                      <p class="card-beer-description"><%=h truncate(beer.description, :length => 90) %></p>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>

        <h2 class="bars-title">Results for bars</h2>
        <% if @bars.length < 1 %>
          <p>Sorry, no bars found üßê</p>
        <% else %>
          <% @bars.each do |bar| %>
            <div class="card bars">
              <div class="row">

                <div class="col-sm-3 col-5">
                  <%= link_to bar_path(bar) do %>
                    <img src="https://media-cdn.tripadvisor.com/media/photo-s/16/25/81/c2/our-new-logo.jpg" class="img-fluid" />
                  <% end %>
                </div>

                <div class="ol-sm-9 col-7 pl-0 bars">
                  <%= link_to bar_path(bar) do %>
                    <div class="card-bars-infos">
                      <h2 class="card-bars-name"><%=h truncate(bar.name, :length => 25) %></h2>
                      <p class="card-bars-location"><%=h truncate(bar.location, :length => 25) %></p>
                      <p class="card-bars-description"><%=h truncate(bar.description, :length => 90) %></p>
                    </div>
                  <% end %>
                </div>

              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>




