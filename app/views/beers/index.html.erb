<div class="container col-8 mt-5">

  <ul class="list-unstyled">
    <% @beers.each do |beer| %>
    <li class="mt-4">Name: <%= beer.name %></li>
    <li>Category : <%= beer.category %></li>
    <li>Alcohol : <%= beer.alcohol %></li>
    <li>IBU : <%= beer.ibu %></li>
    <li>Temperature : <%= beer.temperature %></li>
    <li>Description : <%= beer.description %></li>
    <li>Id : <%= beer.id %></li>
    <% end  %>
  </ul>
</div>


